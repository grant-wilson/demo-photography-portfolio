---
import type { GetStaticPaths } from "astro";
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../projects.mts";

export const getStaticPaths = (() => {
  return projects.map((project) => {
    return {
      params: {
        project: project.name,
      },
      props: {
        projectPath: project.path,
      },
    };
  });
}) satisfies GetStaticPaths;

const { project } = Astro.params;
const { projectPath } = Astro.props;
---

<Layout title="Portfolio > Contact">
  <site-project projectid={project} projectpath={projectPath}></site-project>
  <site-gallery projects={JSON.stringify(projects)}></site-gallery>
  <site-contact-information></site-contact-information>
</Layout>
